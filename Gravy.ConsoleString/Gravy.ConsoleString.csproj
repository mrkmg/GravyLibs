<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <Nullable>enable</Nullable>
        <LangVersion>latest</LangVersion>
    </PropertyGroup>

    <PropertyGroup>
        <PackageId>Gravy.ConsoleString</PackageId>
        <Version>1.0.0</Version>
        <Authors>Kevin Gravier</Authors>
        <PackageTags>TODO</PackageTags>
        <Description>TODO</Description>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

    <Target Name="CopyNuget" AfterTargets="Pack">
        <Copy SourceFiles="$(ProjectDir)/bin/$(Configuration)/$(PackageId).$(Version).nupkg" DestinationFiles="$(SolutionDir)/Packages/$(Configuration)/$(PackageId).$(Version).nupkg" OverwriteReadOnlyFiles="true" />
    </Target>
    
    <ItemGroup>
      <PackageReference Include="Ansi" Version="1.0.3" />
      <ProjectReference Include="../Gravy.MetaString/Gravy.MetaString.csproj" />
      <ProjectReference Include="../Gravy.MetaString.Generator/Gravy.MetaString.Generator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
    </ItemGroup>
    
    <ItemGroup>
        <InternalsVisibleTo Include="$(AssemblyName).Test" />
    </ItemGroup>
    
</Project>
